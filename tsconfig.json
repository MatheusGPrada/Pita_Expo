{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
        "@utils/*": ["./src/utils/*"],
        "@theme": ["./src/styles/theme.ts"],
        "@routes/*": ["./src/routes/*"],
        "@features/*": ["./src/features/*"],
        "@components/*": ["./src/components/*"],
        "@i18n": ["./src/_translate/i18n"],
        "@cache/*": ["./src/cache/*"]
    },
    "plugins": [
        {
            "name": "typescript-styled-plugin",
        }
    ],
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": [
    ".vscode",
    "./packages/app/android", 
    "coverage",
    "./packages/app/ios", 
    "node_modules",
    "./packages/app/metro.config.js", 
    "jest.config.js"
  ],
  "include": [
    "./src/**/*", 
    "./e2e/**/*"
  ]
}
